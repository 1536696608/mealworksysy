<view class="top-box">
  <view>Hi</view>
  <view class="next-text">欢迎使用！</view>
</view>
<!-- 登录、注册 -->
<view class="center-box">
  <view class="nav">
    <view class="left {{current==1?'select':''}}" bindtap="click" data-code="1">
      <text>登录</text>
    </view>
    <view class="right {{current==0?'select':''}}" bindtap="click" data-code="0">
      <text>注册</text>
    </view>
  </view>
  <!-- 登录 -->
  <view class="input-box" hidden="{{current==0}}">
    <view class="wei-input">
      <icon type="waiting" color="#eea215" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入手机号/登录名" bindinput="usernameInput"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#eea215" size="16"></icon>
      <input class="input" password="true" auto-focus placeholder="请输入登录密码" bindinput="passwordInput"/>
    </view>
    <view class="forget">
      <text>忘记密码?</text>
    </view>
  </view>
  <!-- 注册 -->
  <view class="input-box" hidden="{{current==1}}">
    <view class="wei-input">
      <icon type="waiting" color="#eea215" size="16"></icon>
      <input class="input" bindinput="usernameInput" auto-focus placeholder="请输入注册帐号"/>
    </view>
    <!-- <view class="wei-input">
      <icon type="waiting" color="#eea215" size="16"></icon>
      <input class="input" auto-focus placeholder="请输入6位验证码"/>
      <text class="input-code" bindtap="getCode">{{codeText}}</text>
    </view> -->
    <view class="wei-input">
      <icon type="waiting" color="#eea215" size="16"></icon>
      <input class="input" bindinput="workidInput" auto-focus placeholder="请输入工号"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#eea215" size="16"></icon>
      <input class="input" bindinput="passwordInput" auto-focus placeholder="请输入密码" password="true"/>
    </view>
    <view class="wei-input">
      <icon type="waiting" color="#eea215" size="16"></icon>
      <input class="input" bindinput="emailInput" auto-focus placeholder="请输入邮箱号"/>
    </view>
    <!-- <view class="wei-input">
      <icon type="success" color="#eea215" size="16"></icon>
      <input class="input" auto-focus placeholder="请确认密码"/>
    </view> -->
  </view>
  <view class="sumbit-btn">
    <button class="button" bindtap="loginregister"
    style="background-color: #ee8726;font-size: 30rpx;" 
    type="primary">立即{{current==1?'登录':'注册'}}</button>
  </view>
</view>
<!-- 重影 -->
<view class="shadow shadow-1"></view><view class="shadow shadow-2"></view>


